# Mandate Vault Environment Configuration
# =========================================
# Copy this file to .env and update with your values

# ==================== Application ====================
ENVIRONMENT=development  # development, staging, production
DEBUG=False

# ==================== Security ====================
# CRITICAL: Generate a secure random key for production!
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-KEY-MIN-32-CHARS
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==================== Database ====================
# PostgreSQL (PRODUCTION - Recommended)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/mandate_vault

# OR SQLite (DEVELOPMENT ONLY - Not for production)
# DATABASE_URL=sqlite+aiosqlite:///./test.db

# Individual database components (optional)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mandate_vault
DB_USER=mandate_user
DB_PASSWORD=your_secure_password_here

# ==================== CORS & Security ====================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=localhost,127.0.0.1

# ==================== Logging ====================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==================== Rate Limiting ====================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ==================== Webhooks ====================
WEBHOOK_TIMEOUT=30
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=60

# ==================== Alerts ====================
ALERT_EXPIRY_DAYS=7
ALERT_CLEANUP_DAYS=30

